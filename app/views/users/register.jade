extends ../layout

block content
  h1= title
  form(role='form', method='post', action='/users', enctype='application/x-www-form-urlencoded')
    if exists
      .error
        | That user exists. Are you trying to
        a(href="/login") Login
        | ?
    if invalid
      .error Please enter a valid email address and password.
    .form-group
      label(for='email').control-label Email
      input#email(name='email', placeholder='E-Mail').form-control
    .form-group
      label(for='pass').control-label Password
      input#pass(name='pass', type='password',placeholder='Password').form-control
    .form-group
      button(type='submit', value='Log In').btn.btn-default Sign up

