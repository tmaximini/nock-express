extends ../layout

block content
  h1= title
  form(role='form', method='post', action='/users/login', enctype='application/x-www-form-urlencoded')
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    if invalid
      .error Please enter a valid email address and password.
    .form-group
      label(for='username').control-label Username
      input#username(name='username', placeholder='Username').form-control
    .form-group
      label(for='pass').control-label Password
      input#pass(name='pass', type='password',placeholder='Password').form-control
    .form-group
      button(type='submit', value='Log In').btn.btn-default Submit

