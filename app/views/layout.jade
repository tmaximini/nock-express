doctype 5
html(lang='en')
  head
    block header
      - var title = title || "Untitled Document"
      block title
        title= title
      block meta
        meta(name='description', content='')
        meta(name='keywords', content='')

      link(rel='stylesheet', href='/stylesheets/vendor/bootstrap.min.css')

      link(rel='stylesheet', href='/stylesheets/style.css')

    block headerExtra
  body
    - if (!/login/.test(url))
      include partials/adminMenuBar
    - else
      include partials/loginMenuBar


    section.content
      .container
        block content

    include partials/footer